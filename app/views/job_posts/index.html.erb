<% provide :title, t(".title") %>
<%= render "shared/start" %>
<%= render "shared/search_bar", q: @q %>
<section class="section pt-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9 mt-4 pt-2">
        <div class="row align-items-center">
          <div class="col-lg-12">
            <div class="show-results">
              <div class="float-left">
                <h5 class="text-dark mb-0 pt-2 f-18"><%= pluralize @q.result.size, "result" %></h5>
              </div>
            </div>
          </div>
        </div>
        <%= render @job_posts %>
        <div id="paginator" class="col-lg-12 mt-4 pt-2">
          <%= paginate @job_posts %>
        </div>
      </div>
    </div>
  </div>
</section>
