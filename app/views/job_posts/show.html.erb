<% provide :title, t(".title") %>
<%= render "shared/start"%>
<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-7">
        <div class="job-detail text-center job-single border rounded p-4">
          <div class="job-single-img mb-2">
            <img src="images/featured-job/img-1.png" alt="" class="img-fluid mx-auto d-block">
          </div>
          <h4 class="text-dark"><%= @job_post.title %></h4>
          <ul class="list-inline mb-0">
            <li class="list-inline-item mr-3">
              <p class="text-muted mb-2"><i class="fas fa-university"></i> <%= @job_post.category_title %></p>
            </li>
            <li class="list-inline-item">
              <p class="text-muted mb-2"><i class="fas fa-map-marker mr-1"></i> <%= @job_post.location %></p>
            </li>
            <li class="list-inline-item">
              <p class="text-muted mb-2"><i class="fas fa-dollar-sign mr-1"></i>$<%= @job_post.salary_from %> - $<%= @job_post.salary_to %></p>
            </li>
          </ul>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <h5 class="text-dark mt-4"><%= t ".job_description" %></h5>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="job-detail border rounded mt-2 p-4">
              <div class="job-detail-desc">
                <p class="text-muted mb-3"><%= @job_post.description %></p>
              </div>
              <ul class="list-inline mt-3 mb-0">
                <li class="list-inline-item mr-3">
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <h5 class="text-dark mt-4"><%= t ".job_requirement" %></h5>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="job-detail border rounded mt-2 p-4">
              <div class="job-detail-desc">
                <p class="text-muted mb-3"><%= @job_post.requirement %></p>
              </div>
              <ul class="list-inline mt-3 mb-0">
                <li class="list-inline-item mr-3">
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-5 mt-4 mt-sm-0 pt-2 pt-sm-0">
        <div class="company-brand-logo text-center">
          <img src="images/featured-job/img-2.png" alt="" class="img-fluid mx-auto d-block mb-3">
          <h5 class="text-muted mb-0"><a href="#" class="text-muted"><i class="mdi mdi-bank mr-1"></i>Themes Code.Pvt.Ltd</a></h5>
        </div>
        <div class="job-detail rounded border job-overview mt-4 mb-4">
          <div class="single-post-item mb-4">
            <div class="float-left mr-3">
              <i class="mdi mdi-security text-muted mdi-24px"></i>
            </div>
          </div>
          <div class="single-post-item mb-4">
            <div class="float-left mr-3">
              <i class="mdi mdi-currency-usd text-muted mdi-24px"></i>
            </div>
            <div class="overview-details">
              <h6 class="text-muted mb-0"><%= t ".salary" %></h6>
              <h6 class="text-black-50 pt-2 mb-0">$<%= @job_post.salary_from %> - $<%= @job_post.salary_to %></h6>
            </div>
          </div>
          <div class="single-post-item mb-4">
            <div class="float-left mr-3">
              <i class="mdi mdi-apps text-muted mdi-24px"></i>
            </div>
            <div class="overview-details">
              <h6 class="text-muted mb-0"><%= t ".category" %></h6>
              <h6 class="text-black-50 pt-2 mb-0"><%= @job_post.category_title %></h6>
            </div>
          </div>
          <div class="single-post-item mb-4">
            <div class="float-left mr-3">
              <i class="mdi mdi-human-male-female text-muted mdi-24px"></i>
            </div>
          </div>
          <div class="single-post-item mb-4">
            <div class="float-left mr-3">
              <i class="mdi mdi-calendar-today text-muted mdi-24px"></i>
            </div>
            <div class="overview-details">
              <h6 class="text-muted mb-0"><%= t ".date_posted" %></h6>
              <h6 class="text-black-50 pt-2 mb-0"><%= l(@job_post.created_at, format: :long) %></h6>
            </div>
          </div>
        </div>
        <% if current_user&.candidate? && !@job_post.applied_by(current_user) %>
          <div class="mt-4">
            <%= form_with url: job_applications_path, method: :post do %>
              <%= hidden_field_tag :id, @job_post.id %>
              <%= submit_tag t(".apply"), class:"btn btn-primary btn-block btn-sm" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
